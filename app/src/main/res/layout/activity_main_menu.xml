<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/oren"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="294dp"
                    android:layout_height="129dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Menunggu Persetujuan Bimbingan"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                    </LinearLayout>


                    <ImageView
                        android:id="@+id/photo_bimbingan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/photo_bimbingan" />

                </LinearLayout>

                <Button
                    android:id="@+id/more_bimbingan"
                    android:backgroundTint="@color/oren"
                    android:stateListAnimator="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MORE" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/hijau"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="294dp"
                    android:layout_height="129dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Menunggu Persetujuan Bimbingan"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                    </LinearLayout>


                    <ImageView
                        android:id="@+id/photo_seminar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/photo_bimbingan" />

                </LinearLayout>

                <Button
                    android:id="@+id/more_seminar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/hijau"
                    android:stateListAnimator="@null"
                    android:text="MORE" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mahasiswa Bimbingan"
            android:textSize="14dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>



</LinearLayout>