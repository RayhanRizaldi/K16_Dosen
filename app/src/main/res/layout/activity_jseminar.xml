<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JseminarActivity">

    <ImageView
        android:id="@+id/btn_bgSS"
        android:layout_width="357dp"
        android:layout_height="82dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_seminarof" />

    <ImageView
        android:id="@+id/btn_sidangOn"
        android:layout_width="158dp"
        android:layout_height="68dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="59dp"
        android:layout_marginBottom="58dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_bgSS"
        app:layout_constraintEnd_toEndOf="@+id/btn_bgSS"
        app:layout_constraintStart_toEndOf="@+id/btn_seminarOff"
        app:layout_constraintTop_toTopOf="@+id/btn_bgSS"
        app:srcCompat="@drawable/btn_sidangon" />

    <ImageView
        android:id="@+id/btn_seminarOff"
        android:layout_width="146dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="58dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_bgSS"
        app:layout_constraintStart_toStartOf="@+id/btn_bgSS"
        app:layout_constraintTop_toTopOf="@+id/btn_bgSS"
        app:layout_constraintVertical_bias="0.536"
        app:srcCompat="@drawable/btn_seminarklik" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:drawableLeft="@drawable/ic_baseline_push_pin_24"
        android:drawableRight="@drawable/ic_baseline_arrow_right_24"
        android:text="Menunggu Persetujuan Sidang"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_bgSS"
        app:layout_constraintTop_toBottomOf="@+id/btn_bgSS" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        tools:listitem="@layout/list_jadwalseminar" />


</androidx.constraintlayout.widget.ConstraintLayout>