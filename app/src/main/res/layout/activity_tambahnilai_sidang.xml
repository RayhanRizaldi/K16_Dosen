<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahnilaiSidangActivity"
    android:background="@drawable/gradienthijauoren">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardgradeTNS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="32dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            //Judul Tugas Akhir


            <Button
                android:id="@+id/buttonTNS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="152dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/button"
                android:backgroundTint="@color/oren"
                android:text="SIMPAN"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/isigradeTNS"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/isigradeTNS"
                app:layout_constraintTop_toTopOf="@+id/isigradeTNS"
                app:layout_constraintVertical_bias="0.428"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/jgradeTNS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="Grade :"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/isigradeTNS"
                android:layout_width="59dp"
                android:layout_height="41dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="24dp"
                android:ems="10"
                android:inputType="text"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"
                app:cardElevation="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/jgradeTNS"
                app:layout_constraintStart_toStartOf="@+id/jgradeTNS"
                app:layout_constraintTop_toBottomOf="@+id/jgradeTNS"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>