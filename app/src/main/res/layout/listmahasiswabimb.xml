<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageAvatarListmabim"
        android:layout_width="58dp"
        android:layout_height="61dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar" />

    <TextView
        android:id="@+id/textNamaListMabimb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Nadilla Saraswati"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageAvatarListmabim"
        app:layout_constraintTop_toTopOf="@+id/imageAvatarListmabim" />

    <TextView
        android:id="@+id/textNimListMabimb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="2011521004"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textNamaListMabimb"
        app:layout_constraintTop_toBottomOf="@+id/textNamaListMabimb" />

    <ImageButton
        android:id="@+id/imageButtonListDetailMabim"
        android:layout_width="19dp"
        android:layout_height="17dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/textNimListMabimb"
        app:layout_constraintStart_toEndOf="@+id/textNamaListMabimb"
        app:layout_constraintTop_toTopOf="@+id/textNamaListMabimb"
        app:layout_constraintVertical_bias="0.571"
        app:srcCompat="@drawable/dropdown" />


</androidx.constraintlayout.widget.ConstraintLayout>