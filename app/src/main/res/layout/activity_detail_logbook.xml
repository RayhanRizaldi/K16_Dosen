    <TextView
        android:id="@+id/textKegiatanLogbook"
        android:layout_width="370dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:background="@color/hijau"
        android:text="Progress :"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTanggalLogbook" />

    <TextView
        android:id="@+id/editTextKegiatanLogbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:enabled="false"
        android:gravity="start|top"
        android:inputType="none"
        android:text="Pendahulan"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/textKegiatanLogbook"
        app:layout_constraintTop_toBottomOf="@+id/textKegiatanLogbook" />

    <TextView
        android:id="@+id/textRincianKegiatanLogbook"
        android:layout_width="370dp"
        android:layout_height="24dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/hijau"
        android:layout_marginTop="12dp"
        android:text="Problem :"
        app:layout_constraintStart_toStartOf="@+id/editTextKegiatanLogbook"
        app:layout_constraintTop_toBottomOf="@+id/editTextKegiatanLogbook" />

    <TextView
        android:id="@+id/TextRincianKegiatanLogbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="10"
        android:singleLine="false"
        android:text="Membuat Pendahuluan sampai selesai................"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textRincianKegiatanLogbook"
        app:layout_constraintTop_toBottomOf="@+id/textRincianKegiatanLogbook" />

    <TextView
        android:id="@+id/textHasilLogbook"
        android:layout_width="370dp"
        android:layout_height="24dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/hijau"
        android:layout_marginTop="12dp"
        android:text="File Progress :"
        app:layout_constraintStart_toStartOf="@+id/TextRincianKegiatanLogbook"
        app:layout_constraintTop_toBottomOf="@+id/TextRincianKegiatanLogbook" />

    <TextView
        android:id="@+id/Textjudulpdfprogress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
