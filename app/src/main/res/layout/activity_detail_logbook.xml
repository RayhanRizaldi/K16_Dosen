        android:singleLine="false"
        android:text="pdf
"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/textHasilLogbook"
        app:layout_constraintTop_toBottomOf="@+id/textHasilLogbook" />

