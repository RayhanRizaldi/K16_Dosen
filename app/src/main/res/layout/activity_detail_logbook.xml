    <TextView
        android:id="@+id/textViewJudultgsakhir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="judul"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSetujuiLogbook"
        android:layout_width="101dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/oren"
        android:text="Setujui"
        android:textSize="8dp"
        app:icon="@drawable/betul"
        app:layout_constraintEnd_toEndOf="@+id/textViewJudultgsakhir"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintStart_toStartOf="@+id/textViewJudultgsakhir"
        app:layout_constraintTop_toBottomOf="@+id/textViewJudultgsakhir" />

    <TextView
        android:id="@+id/textKegiatanLogbook"
        android:layout_width="370dp"
        android:layout_height="24dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/hijau"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Progress :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSetujuiLogbook" />

    <TextView
        android:id="@+id/editTextKegiatanLogbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:enabled="false"
        android:gravity="start|top"
        android:inputType="none"
        android:text="Pendahulan"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/textKegiatanLogbook"
        app:layout_constraintTop_toBottomOf="@+id/textKegiatanLogbook" />

    <TextView
        android:id="@+id/textRincianKegiatanLogbook"
        android:layout_width="370dp"
        android:layout_height="24dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/hijau"
        android:layout_marginTop="12dp"
        android:text="Problem :"
        app:layout_constraintStart_toStartOf="@+id/editTextKegiatanLogbook"
        app:layout_constraintTop_toBottomOf="@+id/editTextKegiatanLogbook" />

    <TextView
        android:id="@+id/TextRincianKegiatanLogbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="10"
        android:singleLine="false"
        android:text="Membuat Pendahuluan sampai selesai................"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textRincianKegiatanLogbook"
        app:layout_constraintTop_toBottomOf="@+id/textRincianKegiatanLogbook" />

    <TextView
        android:id="@+id/textHasilLogbook"
        android:layout_width="370dp"
        android:layout_height="24dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/hijau"
        android:layout_marginTop="12dp"
        android:text="File Progress :"
        app:layout_constraintStart_toStartOf="@+id/TextRincianKegiatanLogbook"
        app:layout_constraintTop_toBottomOf="@+id/TextRincianKegiatanLogbook" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="140dp"
        android:layout_height="165dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textHasilLogbook"
        app:srcCompat="@drawable/detailtaunduh" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="59dp"
        android:layout_height="49dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton"
        app:layout_constraintEnd_toEndOf="@+id/imageButton"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="@+id/imageButton"
        app:srcCompat="@drawable/unduh" />

</androidx.constraintlayout.widget.ConstraintLayout>